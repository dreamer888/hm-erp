<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id='report_stock_transceive_tree' model='ir.ui.view'>
            <field name='name'>report.stock.transceive.tree</field>
            <field name='model'>report.stock.transceive</field>
            <field name='arch' type='xml'>
                <tree string='商品收发明细表'>
					<field name='warehouse' groups='warehouse.multi_warehouse_groups'  optional="show"/>
                    <field name='goods'  optional="show"/>
                    <field name='attribute' groups='goods.multi_attrs_groups'  optional="show"/>

                    <field name='goods_qty_begain' sum="1"  optional="show"/>
                    <field name='goods_qty_in' sum="1"  optional="show"/>
                    <field name='goods_qty_out' sum="1" optional="show"/>
                    <field name='goods_qty_end' sum="1"  optional="show"/>

                    <field name='uom'  optional="show"/>

					<field name='cost_begain' groups='goods.view_cost_groups' optional="show"/>
                    <field name='cost_in' groups='goods.view_cost_groups' optional="show"/>
                    <field name='cost_out' groups='goods.view_cost_groups' optional="show"/>
                    <field name='cost_end' groups='goods.view_cost_groups' optional="show"/>
                    <button name="find_source_move_line" type="object" string="查看库存调拨明细" icon="fa-search"/>
                </tree>
            </field>
        </record>

        <record id='report_stock_transceive_search' model='ir.ui.view'>
            <field name='name'>report.stock.transceive.search</field>
            <field name='model'>report.stock.transceive</field>
            <field name='arch' type='xml'>
                <search string='商品收发明细表' >
                    <field name='goods' string='商品' filter_domain="[('goods', 'ilike', self)]" />
                    <field name='warehouse' string='仓库' filter_domain="[('warehouse', 'ilike', self)]" />
                    <field name='uom' string='单位' filter_domain="[('uom', 'ilike', self)]" />

                    <group expand="0" string="Group By">
                        <filter name="by_goods" string="商品" context="{'group_by':'goods'}"/>
                        <filter name="by_att" string="属性" context="{'group_by': 'attribute'}" groups='goods.multi_attrs_groups'/>
                        <filter name="by_wh" string="仓库" context="{'group_by': 'warehouse'}" groups='warehouse.multi_warehouse_groups'/>
                        <filter name="by_uom" string="单位" context="{'group_by': 'uom'}"/>
                    </group>
                </search>
            </field>
        </record> 

        <record id='report_stock_transceive_graph' model='ir.ui.view'>
            <field name='name'>report.stock.transceive.graph</field>
            <field name='model'>report.stock.transceive</field>
            <field name='arch' type='xml'>
                <pivot string="商品收发明细表">
                    <field name='goods' type='row' />
                    <field name='warehouse' type='col' groups='warehouse.multi_warehouse_groups' />
                    <field name='goods_qty_begain' type='measure' />
                    <field name='cost_begain' type='measure' groups='goods.view_cost_groups'/>
                </pivot>
            </field>
        </record>

    </data>
</openerp>