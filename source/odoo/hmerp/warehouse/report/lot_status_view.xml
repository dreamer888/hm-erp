<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id='report_lot_status_tree' model='ir.ui.view'>
            <field name='name'>report.lot.status.tree</field>
            <field name='model'>report.lot.status</field>
            <field name='arch' type='xml'>
                <tree string='批次余额表'>
                    <field name='goods'  optional="show"/>
                    <field name='attribute_id' groups='goods.multi_attrs_groups'  optional="show"/>
                    <field name='lot' groups='goods.batch_groups'  optional="show"/>
                    <field name='qty'  optional="show"/>
                    <field name='uom'  optional="show"/>
                    <field name='uos_qty' groups='goods.auxiliary_unit_groups'  optional="show"/>
                    <field name='uos' groups='goods.auxiliary_unit_groups'  optional="show"/>
                    <field name="cost" optional="show"/>
                    <field name="amount" optional="show"/>
                    <field name='date'  optional="show"/>
                    <field name='warehouse' groups='warehouse.multi_warehouse_groups'  optional="show"/>
                    <field name='status'  optional="show"/>
                </tree>
            </field>
        </record>

        <record id='report_lot_status_search' model='ir.ui.view'>
            <field name='name'>report.lot.status.search</field>
            <field name='model'>report.lot.status</field>
            <field name='arch' type='xml'>
                <search string='批次余额表' >
                    <field name='goods' string='商品' filter_domain="[('goods', 'ilike', self)]" />
                    <field name='warehouse' string='仓库' filter_domain="[('warehouse', 'ilike', self)]"
                    	 groups='warehouse.multi_warehouse_groups' />
                    <field name='uom' string='单位' filter_domain="[('uom', 'ilike', self)]" />
                    <field name="lot" string="批次" filter_domain="[('lot', 'ilike', self)]"/>

                    <group expand="0" string="Group By">
                        <filter name="by_goods" string="商品" context="{'group_by':'goods'}"/>
                        <filter name="by_wh" string="仓库" context="{'group_by': 'warehouse'}" groups='warehouse.multi_warehouse_groups'/>
                        <filter name="by_uom" string="单位" context="{'group_by': 'uom'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id='report_lot_status_graph' model='ir.ui.view'>
            <field name='name'>report.lot.status.graph</field>
            <field name='model'>report.lot.status</field>
            <field name='arch' type='xml'>
                <pivot string='批次余额表'>
                	<field name='goods' type='row' />
                    <field name='lot' type='row' groups='goods.batch_groups' />
                    <field name='warehouse' type='col' groups='warehouse.multi_warehouse_groups' />
                    <field name='cost' type='measure' />
                    <field name='qty' type='measure' />
                    <field name='amount' type='measure' />
                </pivot>
            </field>
        </record>

    </data>
</openerp>
