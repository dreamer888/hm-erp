<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wh_assembly_form_warehouse_produce" model="ir.ui.view">
        <field name="name">wh.assembly.form.warehouse.produce</field>
        <field name="model">wh.assembly</field>
        <field name="inherit_id" ref="warehouse.wh_assembly_form"/>
        <field name="arch" type="xml">
            <button name="approve_feeding" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="approve_order" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="update_bom" position="before">
                <button name='%(warehouse_produce.action_produce)s' type='action'
                    string='报工' class='oe_highlight' states="draft"/>
            </button>
        </field>
    </record>
</odoo>