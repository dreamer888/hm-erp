<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <!-- Inherit Form View to Modify it -->
       <record id="staff_employee_invisible_form_view" model="ir.ui.view">
           <field name="name">staff.employee.invisible</field>
           <field name="model">staff</field>
           <field name="inherit_id" ref="staff.view_staff_employee_form"/>
           <field name="arch" type="xml">
               <xpath expr="//form/sheet/notebook/page[@name='personal']/group/group[3]" position="attributes">
                   <attribute name="attrs">{'invisible': 1}</attribute>
               </xpath>
               <xpath expr="//form/sheet/notebook/page[@name='personal']/group/group[5]" position="attributes">
                   <attribute name="attrs">{'invisible': 1}</attribute>
               </xpath>
               <xpath expr="//notebook/page[3]" position="attributes">
                   <attribute name="attrs">{'invisible': 1}</attribute>
               </xpath>
                <xpath expr="//field[@name='identification_id']" position="after">
                   <field name="type_of_certification_tw"/>
               </xpath>
               <xpath expr="//field[@name='type_of_certification']" position="attributes">
                   <attribute name="attrs">{'invisible': 1, 'required': False}</attribute>
               </xpath>

           </field>
       </record>

    </data>
</odoo>