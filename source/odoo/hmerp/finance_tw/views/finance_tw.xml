<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="voucher_form_invisible_form_view" model="ir.ui.view">
            <field name="name">voucher.form.invisible.form</field>
            <field name="model">voucher</field>
            <field name="inherit_id" ref="finance.voucher_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='amount_text']" position="attributes">
                    <attribute name="attrs">{'invisible': 1}</attribute>
                </xpath>

            </field>
        </record>

    </data>
</odoo>