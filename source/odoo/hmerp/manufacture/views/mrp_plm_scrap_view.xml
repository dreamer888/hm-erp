<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="mrp_plm_scrap_tree">
        <field name="name">mrp.plm.scrap.tree</field>
        <field name="model">mrp.plm.scrap</field>
        <field name="arch" type="xml">
            <tree string="生产报废">
                <field name="name"/>
                <field name="partner_id"/>
                <field name='department_id' optional="show"/>
                <field name='user_id' optional="show"/>
                <field name="workcenter_id"/>
                <field name="plm_id"/>
                <field name="goods_id"/>
                <field name="mrp_proc_id"/>
                <field name="qty"/>
                <field name="goods_uom_id"/>
                <field name="state"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="mrp_plm_scrap_form">
        <field name="name">mrp.plm.scrap.form</field>
        <field name="model">mrp.plm.scrap</field>
        <field name="arch" type="xml">
            <form string="生产报废" create="0" >
                <header>
                    <button name="button_done" type="object" string="确认" attrs="{'invisible': [('state', 'not in', ('draft'))]}"/>
                    <button name="button_draft" type="object" string="撤回" attrs="{'invisible': [('state', 'not in', ('done'))]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name='department_id' optional="show"/>
                            <field name='user_id' optional="show"/>
                            <field name="workcenter_id"/>
                            <field name="plm_id" />
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name='goods_id' optional="show"/>
                            <field name="mrp_proc_id"/>
                            <field name="next_mrp_proc_get_way" invisible="1"/>
                            <label for="next_task_id" string="转下生产任务" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'ous')]}"/>
                            <div class="o_row" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'ous')]}">
                                <field name="next_task_id"/>   工序
                                <field name="next_mrp_proc_id"/>
                            </div>
                            <label for="next_ous_id" string="转下委外任务" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'self')]}"/>
                            <div class="o_row" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'self')]}">
                                <field name="next_ous_id"/>  工序
                                <field name="next_mrp_proc_id"/>
                            </div>
                            <field name="qty_pending" attrs="{'invisible': [('state', '=', 'done')]}"/>
                            <field name="qty"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="mrp_plm_scrap_action" model="ir.actions.act_window">
        <field name="name">生产报废</field>
        <field name="res_model">mrp.plm.scrap</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref='mrp_plm_scrap_tree'/>
        <field name="help" type="html">
           <p class="oe_view_nocontent_create">
                 
           </p>
         </field>
    </record>
    <record id="view_mrp_plm_scrap_form_view_filter" model="ir.ui.view">
        <field name="name">mrp.plm.scrap.select</field>
        <field name="model">mrp.plm.scrap</field>
        <field name="arch" type="xml">
            <search string="查询生产报废">
                <field name="name" string="单号"/>
                <field name="partner_id" string="供应商"/>
             </search>
        </field>
    </record>
</odoo>