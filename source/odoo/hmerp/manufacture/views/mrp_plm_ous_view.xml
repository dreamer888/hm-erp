<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="mrp_plm_ous_tree">
        <field name="name">mrp.plm.ous.tree</field>
        <field name="model">mrp.plm.ous</field>
        <field name="arch" type="xml">
            <tree string="工序委外订单">
                <field name="name"/>
                <field name="date"/>
                <field name="partner_id"/>
                <field name='department_id' optional="show"/>
                <field name='user_id' optional="show"/>
                <field name="date_planned_start"/>
                <field name="workcenter_id" widget="selection"/>
                <field name="plm_id"/>
                <field name="goods_id"/>
                <field name="mrp_proc_id"/>
                <field name="qty_task"/>
                <field name="goods_uom_id"/>
                <field name="state"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="mrp_plm_ous_form">
        <field name="name">mrp.plm.ous.form</field>
        <field name="model">mrp.plm.ous</field>
        <field name="arch" type="xml">
            <form string="工序委外订单" create="0" >
                <header>
                    <button name="button_done" type="object" string="确认" attrs="{'invisible': [('state', 'not in', ('draft'))]}"/>
                    <button name="button_draft" type="object" string="撤回" attrs="{'invisible': [('state', 'not in', ('done'))]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_plm_ous_conf" class="oe_stat_button" icon="fa-truck"
                                attrs="{'invisible':[('state', 'in', ('draft'))]}">
                            <field name="plm_ous_conf_count" widget="statinfo" string="收货" help=""/>
                            <field name="plm_ous_conf_ids" invisible="1"/>
                        </button>
                        <button type="object" name="action_view_plm_ous_retu" class="oe_stat_button" icon="fa-truck"
                                attrs="{'invisible':['|', ('state', 'in', ('draft')), ('plm_ous_retu_count', '=', 0)]}">
                            <field name="plm_ous_retu_count" widget="statinfo" string="退回" help=""/>
                            <field name="plm_ous_retu_ids" invisible="1"/>
                        </button>
                        <button type="object" name="action_view_plm_ous_qc" class="oe_stat_button" icon="fa-truck"
                                attrs="{'invisible':['|', ('state', 'in', ('draft')), ('plm_ous_qc_count', '=', 0)]}">
                            <field name="plm_ous_qc_count" widget="statinfo" string="质检" help=""/>
                            <field name="plm_ous_qc_ids" invisible="1"/>
                        </button>
                        <button type="object"
                            name="action_view_invoice"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o" attrs="{'invisible':['|', ('state', 'in', ('draft')),('invoice_count','=',0)]}">
                            <field name="invoice_count" widget="statinfo" string="结算单" help="Vendor Invoice"/>
                            <field name="invoice_ids" invisible="1"/>
                        </button>                        
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="partner_ids" invisible="1"/>
                            <field name="partner_id" domain="['&amp;',('id', 'in', partner_ids),('s_category_id', '!=', False)]" context="{'form_view_ref': 'core.supplier_address_form','OusStrategy': True,'goods_id': goods_id, 'mrp_proc_id': mrp_proc_id}"/>
                            <field name='department_id' optional="show"/>
                            <field name='user_id' optional="show"/>
                            <field name="currency_id"/>
                            <field name="plm_id" />
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <group>
                                <field name='goods_id' optional="show"/>
                                <field name="mrp_proc_id"/>
                                <field name="next_mrp_proc_get_way" invisible="1"/>
                                <label for="next_task_id" string="转下生产任务" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'ous')]}"/>
                                <div class="o_row" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'ous')]}">
                                    <field name="next_task_id"/>   工序
                                    <field name="next_mrp_proc_id"/>
                                </div>
                                <label for="next_ous_id" string="转下委外任务" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'self')]}"/>
                                <div class="o_row" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'self')]}">
                                    <field name="next_ous_id"/>  工序
                                    <field name="next_mrp_proc_id"/>
                                </div>
                                <field name="qty_pending"/>
                                <field name="qty_task"/>
                                <field name="qty_conf"/>
                                <field name="qty_retu"/>
                                <field name="qty_receipt"/>
                            </group>
                            <group>
                                <field name="price"/>
                                <field name="price_taxed"/>
                                <field name="discount_rate"/>
                                <field name="discount_amount"/>
                                <field name="amount"/>
                                <field name="tax_rate"/>
                                <field name="tax_amount"/>
                                <field name="subtotal"/>
                            </group>
                        </group>
                    </group>

                    <notebook>
                        <page string="生产指令" name="mrp_plm_task_attr" invisible="1">
                            <field name="worksheet_google_slide" widget="embed_viewer"/>
                            <field name="worksheet" widget="pdf_viewer"/>
                        </page> 
                        <page string="工序物料">
                            <field name='proc_mat_ids'>
                                <tree string='物料'>
                                    <field name='goods_id'  optional="show"/>
                                    <field name='uom_id' optional="show"/>
                                    <field name='qty_bom' optional="show"/>
                                    <field name='qty' sum='数量合计' optional="show"/>
                                    <field name="qty_waste" optional="show"/>
                                    <field name="rate_waste" optional="show"/>
                                    <field name='qty_to' optional="show"/>
                                    <field name='qty_cons' optional="show"/>
                                    <field name='warehouse_id' optional="show"/>
                                    <field name='remark' optional="show"/>
                                </tree>
                            </field>
                        </page>
                        <page string="时间跟踪" name = 'mrp_plm_task_plan'>
                            <group>
                                <field name="line_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="date_start"/>
                                        <field name="date_finished"/>
                                        <field name="times"/>
                                        <field name="qty"/>
                                        <field name="qty_times"/>
                                        <field name="qty_conf"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="mrp_plm_ous_action" model="ir.actions.act_window">
        <field name="name">工序委外订单</field>
        <field name="res_model">mrp.plm.ous</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref='mrp_plm_ous_tree'/>
        <field name="help" type="html">
           <p class="oe_view_nocontent_create">
                 
           </p>
         </field>
    </record>
    <record id="view_mrp_plm_ous_form_view_filter" model="ir.ui.view">
        <field name="name">mrp.plm.ous.select</field>
        <field name="model">mrp.plm.ous</field>
        <field name="arch" type="xml">
            <search string="查询工序委外订单">
                <field name="name" string="单号"/>
                <field name="partner_id" string="供应商"/>
             </search>
        </field>
    </record>
</odoo>