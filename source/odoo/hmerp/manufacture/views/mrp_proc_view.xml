<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="mrp_proc_tree" model="ir.ui.view">
        <field name="name">工序资料</field>
        <field name="model">mrp.proc</field>
        <field name="arch" type="xml">
            <tree string='工序资料' editable="botton">
                <field name='code' optional="show"/>
                <field name='name'  optional="show"/>
                <field name='workcenter_id'  optional="show"/>
                <field name='mrp_proc_type_id' domain="[('node', '=', 'normal')]" optional="show"/>
                <field name='mrp_proc_class_id' optional="show"/>
                <field name='proc_ctl' optional="show"/>
                <field name='need_qc' optional="show"/>
                <field name='qc_department_id' optional="show"/>
                <field name='get_way' optional="show"/>
                <field name='sub_remark' optional="show"/>
                <field name='rate_waste' optional="show"/>
                <field name='time_uom' optional="show"/>
                <field name='pre_time' optional="show"/>
                <field name='work_time' optional="show"/>
                <field name='price_std' optional="show"/>
                <field name='price' optional="show"/>
                <field name='remark'  optional="show"/>
            </tree>
        </field>
    </record>
    <record id="mrp_proc_search" model="ir.ui.view">
        <field name="name">工序资料</field>
        <field name="model">mrp.proc</field>
        <field name="arch" type="xml">
            <search >
                <field name='code' />
                <field name='name' />
                <field name='workcenter_id' />
                <field name='mrp_proc_type_id' />
                <field name='mrp_proc_class_id' />
                <field name='get_way' />
            </search>
        </field>
    </record>

    <!--Bom类别 action-->
    <record id='mrp_proc_action' model='ir.actions.act_window'>
        <field name='name'>工序资料</field>
        <field name='res_model'>mrp.proc</field>

        <field name='view_mode'>tree,form</field>
        <field name='view_id' ref='mrp_proc_tree'/>
        <field name="context">{'warehouse_type': 'stock','search_default_user_id':1}</field>
        <field name="help" type="html">
           <p class="oe_view_nocontent_create">
           </p>
         </field>
    </record>
</odoo>