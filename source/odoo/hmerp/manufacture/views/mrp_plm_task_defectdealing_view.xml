<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="mrp_plm_task_defectdealing_tree">
        <field name="name">mrp.plm.task.defectdealing.tree</field>
        <field name="model">mrp.plm.task.defectdealing</field>
        <field name="arch" type="xml">
            <tree string="工序质检不良处理">
                <field name="name"/>
                <field name="workcenter_id" widget="selection"/>
                <field name="plm_id"/>
                <field name="plm_task_id"/>
                <field name="goods_id"/>
                <field name="mrp_proc_id"/>
                <field name="qty"/>
                <field name="qty_rework"/>
                <field name="state"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="mrp_plm_task_defectdealing_form">
        <field name="name">mrp.plm.task.defectdealing.form</field>
        <field name="model">mrp.plm.task.defectdealing</field>
        <field name="arch" type="xml">
            <form string="工序质检不良处理" create="0" >
            <header>
                <button name="button_done" type="object" string="确认" states='draft' />
                <button name="button_draft" type="object" string="撤消" states='done' />
                <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
            </header>
            <sheet>
                <div class="oe_button_box" name="button_box">
                    <button type="object" name="action_view_mrp_plm" class="oe_stat_button" icon="fa-truck"
                            attrs="{'invisible':['|', ('state', 'in', ('draft')), ('mrp_plm_count', '=', 0)]}">
                        <field name="mrp_plm_count" widget="statinfo" string="生产加工" help=""/>
                        <field name="mrp_plm_ids" invisible="1"/>
                    </button>
                    <button type="object" name="action_view_mrp_plm_task" class="oe_stat_button" icon="fa-truck"
                            attrs="{'invisible':['|', ('state', 'in', ('draft')), ('mrp_plm_task_count', '=', 0)]}">
                        <field name="mrp_plm_task_count" widget="statinfo" string="生产任务" help=""/>
                        <field name="mrp_plm_task_ids" invisible="1"/>
                    </button>
                    <button type="object" name="action_view_mrp_plm_ous" class="oe_stat_button" icon="fa-truck"
                            attrs="{'invisible':['|', ('state', 'in', ('draft')), ('mrp_plm_ous_count', '=', 0)]}">
                        <field name="mrp_plm_ous_count" widget="statinfo" string="工序委外订单" help=""/>
                        <field name="mrp_plm_ous_ids" invisible="1"/>
                    </button>
                    <button type="object" name="action_view_mrp_plm_scrap" class="oe_stat_button" icon="fa-truck"
                            attrs="{'invisible':['|', ('state', 'in', ('draft')), ('mrp_plm_scrap_count', '=', 0)]}">
                        <field name="mrp_plm_scrap_count" widget="statinfo" string="报废" help=""/>
                        <field name="mrp_plm_scrap_ids" invisible="1"/>
                    </button>
                </div>
                <group>
                    <group>
                        <field name="workcenter_id"/>
                        <field name="plm_id" />
                        <field name="goods_id"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group>
                        <field name='goods_id' optional="show"/>
                        <field name="mrp_proc_id"/>
                        <field name="next_mrp_proc_get_way" invisible="1"/>
                        <label for="next_task_id" string="转下生产任务" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'ous')]}"/>
                        <div class="o_row" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'ous')]}">
                            <field name="next_task_id"/>   工序
                            <field name="next_mrp_proc_id"/>
                        </div>
                        <label for="next_ous_id" string="转下委外任务" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'self')]}"/>
                        <div class="o_row" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'self')]}">
                            <field name="next_ous_id"/>  工序
                            <field name="next_mrp_proc_id"/>
                        </div>
                        <field name="qty_pending" attrs="{'invisible': [('state', '=', 'done')]}"/>
                        <field name="qty"/>
                        <field name="qty_rework"/>
                        <field name="qty_scrap"/>
                        <field name="qty_replan"/>
                    </group>
                </group>
                <notebook>
                    <page string="不良原因">
                        <field name='dealing_ids'>
                            <tree string="工序质检不良明细" editable="botton">
                                <field name="qc_id"/>
                                <field name="mrp_proc_cause_id"/>
                                <field name="mrp_proc_cause_type_id"/>
                                <field name="qty"/>
                                <field name="disposal_mode"/>
                            </tree>
                        </field>
                    </page>
                    <page string="返工明细">
                        <field name='rework_line_ids'>
                            <tree string="返工工艺线路" editable='bottom'>
                                <field name="sequence" widget="handle"/>
                                <field name="mrp_proc_id" optional="show"/>
                                <field name="down" optional="show"/>
                                <field name='proc_ctl' optional="show"/>
                                <field name="need_qc" optional="show"/>
                                <field name="workcenter_id" optional="show"/>
                                <field name="qc_department_id" optional="hide"/>
                                <field name="get_way" optional="show"/>
                                <field name="rate_self" optional="show"/>
                                <field name="qty_proc" optional="show"/>
                                <field name="qty" optional="show"/>
                                <field name="sub_remark" optional="hide"/>
                                <field name="rate_waste" optional="show"/>
                                <field name="time_uom" optional="hide"/>
                                <field name="pre_time" optional="hide"/>
                                <field name="work_time" optional="hide"/>
                                <field name="price_std" optional="hide"/>
                                <field name="price" optional="hide"/>
                                <field name="remark" optional="show"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </sheet>
            </form>
        </field>
    </record>
    
    <record id="mrp_plm_task_defectdealing_action" model="ir.actions.act_window">
        <field name="name">生产质检报告</field>
        <field name="res_model">mrp.plm.task.defectdealing</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref='mrp_plm_task_defectdealing_tree'/>
        <field name="help" type="html">
           <p class="oe_view_nocontent_create">
                 
           </p>
         </field>
    </record>
</odoo>