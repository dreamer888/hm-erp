<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="mrp_bom_category_tree" model="ir.ui.view">
        <field name="name">Bom类型</field>
        <field name="model">mrp.bom.category</field>
        <field name="arch" type="xml">
            <tree string='Bom类型' editable="top">
                <field name='name'  optional="show"/>
                <field name='parent_id' optional="show"/>
            </tree>
        </field>
    </record>
    <!--Bom类别 action-->
    <record id='mrp_bom_category_action' model='ir.actions.act_window'>
        <field name='name'>Bom类别</field>
        <field name='res_model'>mrp.bom.category</field>

        <field name='view_mode'>tree,form</field>
        <field name='view_id' ref='mrp_bom_category_tree'/>
        <field name="context">{'warehouse_type': 'stock','search_default_user_id':1}</field>
        <field name="help" type="html">
           <p class="oe_view_nocontent_create">
                 点击创建Bom类别
           </p>
         </field>
    </record>
</odoo>