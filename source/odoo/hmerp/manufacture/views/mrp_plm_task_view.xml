<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="mrp_plm_task_tree">
        <field name="name">mrp.plm.task.tree</field>
        <field name="model">mrp.plm.task</field>
        <field name="arch" type="xml">
            <tree string="生产任务单">
                <field name="name"/>
                <field name="date"/>
                <field name='department_id' optional="show"/>
                <field name='user_id' optional="show"/>
                <field name="date_planned_start"/>
                <field name="workcenter_id" widget="selection"/>
                <field name="plm_id"/>
                <field name="goods_id"/>
                <field name="mrp_proc_id"/>
                <field name="qty_task"/>
                <field name="qty_conf"/>
                <field name="goods_uom_id"/>
                <field name="state"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="mrp_plm_task_form">
        <field name="name">mrp.plm.task.form</field>
        <field name="model">mrp.plm.task</field>
        <field name="arch" type="xml">
            <form string="生产任务单" delete="0" create="0" >
            <header>
                <button name="button_ready" type="object" string="安排计划" attrs="{'invisible': [('state', 'not in', ('draft'))]}"/>
                <button name="button_start" type="object" string="开始工作" attrs="{'invisible': [('state', 'not in', ('ready'))]}"/>
                <button name="button_done" type="object" string="完成" class="btn-success" attrs="{'invisible': [('state', 'not in', ('progress'))]}"/>
                <button name="button_pause" type="object" string="暂停" class="btn-warning" attrs="{'invisible': [('state', 'not in', ('progress'))]}"/>
                <button name="button_start" type="object" string="继续生产" attrs="{'invisible': [('state', 'not in', ('pause'))]}"/>
                <button name="button_draft" type="object" string="撤回" attrs="{'invisible': [('state', 'not in', ('done', 'ready', 'progress', 'pause'))]}"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,ready,progress,pause,done"/>
            </header>
            <sheet>
                <div class="oe_button_box" name="button_box">
                    <button type="object" name="action_view_plm_task_conf" class="oe_stat_button" icon="fa-truck"
                            attrs="{'invisible':[('state', 'in', ('draft'))]}">
                        <field name="task_conf_count" widget="statinfo" string="报工" help=""/>
                        <field name="task_conf_ids" invisible="1"/>
                    </button>
                </div>
                <group>
                    <group>
                        <field name="date"/>
                        <field name="workcenter_id"/>
                        <field name="plm_id" />
                        <field name='department_id' optional="show"/>
                        <field name='user_id' optional="show"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group>
                        <field name='goods_id' optional="show"/>
                        <field name="mrp_proc_id"/>
                        <field name="next_mrp_proc_get_way" invisible="1"/>
                        <label for="next_task_id" string="转下生产任务" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'ous')]}"/>
                        <div class="o_row" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'ous')]}">
                            <field name="next_task_id"/>   工序
                            <field name="next_mrp_proc_id"/>
                        </div>
                        <label for="next_ous_id" string="转下委外任务" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'self')]}"/>
                        <div class="o_row" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'self')]}">
                            <field name="next_ous_id"/>  工序
                            <field name="next_mrp_proc_id"/>
                        </div>
                        <label for="qty_conf" string="加工数量"/>
                        <div class="o_row">
                            <field name="qty_task" readonly="1"/> 报工数量 <field name="qty_conf"/>
                        </div>
                    </group>
                </group>
                <notebook>
                <page string="生产指令" name="mrp_plm_task_attr" invisible="1">
                    <field name="worksheet_google_slide" widget="embed_viewer"/>
                    <field name="worksheet" widget="pdf_viewer"/>
                </page> 
                <page string="工序物料">
                    <field name='proc_mat_ids'>
                        <tree string='物料'>
                            <field name='goods_id'  optional="show"/>
                            <field name='uom_id' optional="show"/>
                            <field name='qty_bom' optional="show"/>
                            <field name='qty' sum='数量合计' optional="show"/>
                            <field name="qty_waste" optional="show"/>
                            <field name="rate_waste" optional="show"/>
                            <field name='qty_to' optional="show"/>
                            <field name='qty_cons' optional="show"/>
                            <field name='warehouse_id' optional="show"/>
                            <field name='remark' optional="show"/>
                        </tree>
                    </field>
                </page>
                <page string="时间跟踪" name = 'mrp_plm_task_plan'>
                    <group>
                        <field name="line_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="date_start"/>
                                <field name="date_finished"/>
                                <field name="times"/>
                                <field name="qty"/>
                                <field name="qty_times"/>
                                <field name="qty_conf"/>
                            </tree>
                        </field>
                    </group>
                </page>
                </notebook>
            </sheet>
            </form>
        </field>
    </record>
    
    <record id="mrp_plm_task_action" model="ir.actions.act_window">
        <field name="name">生产任务单</field>
        <field name="res_model">mrp.plm.task</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref='mrp_plm_task_tree'/>
        <field name="help" type="html">
           <p class="oe_view_nocontent_create">
                 
           </p>
         </field>
    </record>
    <record id="view_mrp_plm_task_form_view_filter" model="ir.ui.view">
        <field name="name">mrp.plm.task.select</field>
        <field name="model">mrp.plm.task</field>
        <field name="arch" type="xml">
            <search string="查询生产任务单">
                <field name="name" string="生产任务单"/>
                <field name="workcenter_id"/>
                <filter string="进行中" name="progress" domain="[('state', '=', 'progress')]"/>
                <filter string="就绪" name="ready" domain="[('state', '=', 'ready')]"/>
                <filter string="待定" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="已完成" name="finish" domain="[('state', '=', 'done')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="工作中心" name="work_center" domain="[]" context="{'group_by': 'workcenter_id'}"/>
                    <filter string="生产加工单" name="production" domain="[]" context="{'group_by': 'plm_id'}"/>
                    <filter string="状态" name="status" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="安排的日期" name="scheduled_month" domain="[]" context="{'group_by': 'date_planned_start'}"/>
                </group>
             </search>
        </field>
    </record>
</odoo>