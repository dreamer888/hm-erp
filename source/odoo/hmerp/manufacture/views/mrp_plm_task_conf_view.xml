<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="mrp_plm_task_conf_tree">
        <field name="name">mrp.plm.task.conf.tree</field>
        <field name="model">mrp.plm.task.conf</field>
        <field name="arch" type="xml">
            <tree string="生产报工">
                <field name="name"/>
                <field name='department_id' optional="show"/>
                <field name='user_id' optional="show"/>
                <field name="workcenter_id" widget="selection"/>
                <field name="plm_id"/>
                <field name="goods_id"/>
                <field name="mrp_proc_id"/>
                <field name="qty"/>
                <field name="state"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="mrp_plm_task_conf_form">
        <field name="name">mrp.plm.task.conf.form</field>
        <field name="model">mrp.plm.task.conf</field>
        <field name="arch" type="xml">
            <form string="生产报工" create="0" >
            <header>
                <button name="button_done" type="object" string="确认" states='draft' />
                <button name="button_draft" type="object" string="撤消" states='done' />
                <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
            </header>
            <sheet>
                <div class="oe_button_box" name="button_box">
                    <button type="object" name="action_view_plm_task_qc" class="oe_stat_button" icon="fa-truck"
                            attrs="{'invisible':['|', ('state', 'in', ('draft')), ('plm_task_qc_count', '=', 0)]}">
                        <field name="plm_task_qc_count" widget="statinfo" string="质检报告" help=""/>
                        <field name="plm_task_qc_ids" invisible="1"/>
                    </button>
                </div>
                <group>
                    <group>
                        <field name='department_id' optional="show"/>
                        <field name='user_id' optional="show"/>
                        <field name="workcenter_id"/>
                        <field name="plm_id" />
                        <field name="goods_id"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group>
                        <field name='goods_id' optional="show"/>
                        <field name="mrp_proc_id"/>
                        <field name="next_mrp_proc_get_way" invisible="1"/>
                        <label for="next_task_id" string="转下生产任务" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'ous')]}"/>
                        <div class="o_row" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'ous')]}">
                            <field name="next_task_id"/>   工序
                            <field name="next_mrp_proc_id"/>
                        </div>
                        <label for="next_ous_id" string="转下委外任务" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'self')]}"/>
                        <div class="o_row" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'self')]}">
                            <field name="next_ous_id"/>  工序
                            <field name="next_mrp_proc_id"/>
                        </div>
                        <field name="qty_pending" attrs="{'invisible': [('state', '=', 'done')]}"/>
                        <field name="qty"/>
                    </group>
                </group>
            </sheet>
            </form>
        </field>
    </record>
    
    <record id="mrp_plm_task_conf_action" model="ir.actions.act_window">
        <field name="name">生产报工</field>
        <field name="res_model">mrp.plm.task.conf</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref='mrp_plm_task_conf_tree'/>
        <field name="help" type="html">
           <p class="oe_view_nocontent_create">
                 
           </p>
         </field>
    </record>
</odoo>