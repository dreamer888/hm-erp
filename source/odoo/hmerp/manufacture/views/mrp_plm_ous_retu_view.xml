<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="mrp_plm_ous_retu_tree">
        <field name="name">mrp.plm.ous.retu.tree</field>
        <field name="model">mrp.plm.ous.retu</field>
        <field name="arch" type="xml">
            <tree string="工序委外退回">
                <field name="name"/>
                <field name='department_id' optional="show"/>
                <field name='user_id' optional="show"/>
                <field name="workcenter_id" widget="selection"/>
                <field name="plm_id"/>
                <field name="goods_id"/>
                <field name="mrp_proc_id"/>
                <field name="qty"/>
                <field name="goods_uom_id"/>
                <field name="state"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="mrp_plm_ous_retu_form">
        <field name="name">mrp.plm.ous.retu.form</field>
        <field name="model">mrp.plm.ous.retu</field>
        <field name="arch" type="xml">
            <form string="工序委外退回" create="0" >
                <header>
                    <button name="button_done" type="object" string="确认" attrs="{'invisible': [('state', 'not in', ('draft'))]}"/>
                    <button name="button_draft" type="object" string="撤回" attrs="{'invisible': [('state', 'not in', ('done'))]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" required="1"
								domain="[('s_category_id', '!=', False)]"
								context="{'form_view_ref': 'core.supplier_address_form'}"/>
                            <field name='department_id' optional="show"/>
                            <field name='user_id' optional="show"/>
                            <field name="currency_id"/>
                            <field name="plm_id" />
                            <field name="type" />
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <group>
                                <field name='goods_id' optional="show"/>
                                <field name="mrp_proc_id"/>
                                <field name="next_mrp_proc_get_way" invisible="1"/>
                                <field name="next_task_id" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'ous')]}"/>
                                <field name="next_ous_id" attrs="{'invisible':[('next_mrp_proc_get_way', '=', 'self')]}"/>
                                <field name="next_mrp_proc_id"/>
                                <field name="qty_pending" attrs="{'invisible':[('state', 'in', ('done'))]}"/>
                                <field name="qty" string="退回数量"/>
                            </group>
                            <group>
                                <field name="price"/>
                                <field name="price_taxed"/>
                                <field name="discount_rate"/>
                                <field name="discount_amount"/>
                                <field name="amount"/>
                                <field name="tax_rate"/>
                                <field name="tax_amount"/>
                                <field name="subtotal"/>
                            </group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="mrp_plm_ous_retu_action" model="ir.actions.act_window">
        <field name="name">工序委外退回</field>
        <field name="res_model">mrp.plm.ous.retu</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref='mrp_plm_ous_retu_tree'/>
        <field name="help" type="html">
           <p class="oe_view_nocontent_create">
                 
           </p>
         </field>
    </record>
    <record id="view_mrp_plm_ous_retu_form_view_filter" model="ir.ui.view">
        <field name="name">mrp.plm.ous.retu.select</field>
        <field name="model">mrp.plm.ous.retu</field>
        <field name="arch" type="xml">
            <search string="查询工序委外退回">
                <field name="name" string="单号"/>
                <field name="partner_id" string="供应商"/>
             </search>
        </field>
    </record>
</odoo>