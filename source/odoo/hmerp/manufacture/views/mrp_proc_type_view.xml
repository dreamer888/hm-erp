<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="mrp_proc_type_tree" model="ir.ui.view">
        <field name="name">工序类别</field>
        <field name="model">mrp.proc.type</field>
        <field name="arch" type="xml">
            <tree string='工序类别' editable="botton">
                <field name='code' optional="show"/>
                <field name='name'  optional="show"/>
                <field name='department_id'  optional="show"/>
                <field name='up_id' domain="[('node', '=', 'view')]" optional="show"/>
                <field name='node' optional="show"/>
                <field name='remark'  optional="show"/>
            </tree>
        </field>
    </record>
    <!--Bom类别 action-->
    <record id='mrp_proc_type_action' model='ir.actions.act_window'>
        <field name='name'>工序类别</field>
        <field name='res_model'>mrp.proc.type</field>
        <field name='view_mode'>tree,form</field>
        <field name='view_id' ref='mrp_proc_type_tree'/>
        <field name="context">{'warehouse_type': 'stock','search_default_user_id':1}</field>
        <field name="help" type="html">
           <p class="oe_view_nocontent_create">
           </p>
         </field>
    </record>
</odoo>