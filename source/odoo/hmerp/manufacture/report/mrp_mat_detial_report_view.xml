<?xml version="1.0"?>
<openerp>
    <data>
    	<record id="mrp_mat_detial_report_tree" model="ir.ui.view">
            <field name="name">mrp.mat.detial.report.tree</field>
            <field name="model">mrp.mat.detial.report</field>
            <field name="arch" type="xml">
                <tree string="生产领退补明细" create="false">
                	<field name="id" invisible="1"/>
                	<field name="date" optional="show"/>
                	<field name="name" optional="show"/>
                	<button name="view_bil_from" type="object" string="查看单据明细" icon="fa-search" optional="show"/>
                	<field name="type" optional="show"/>
                	<field name="user_name" optional="show"/>
                	<field name="order_name" optional="show"/>
                	<field name="plm_name" optional="show"/>
                    <field name="plm_goods_name" optional="show"/>
                    <field name="plm_qty" sum="数量合计" optional="show"/>
                    <field name="warehouse_name" optional="show"/>
                    <field name="goods_name" optional="show"/>
                    <field name="uom" optional="show"/>
                    <field name="qty" sum="数量合计" optional="show"/>
                    <field name="state" optional="show"/>
                </tree>
            </field>
        </record>
        <record id="mrp_mat_detail_report_tree_search" model="ir.ui.view">
            <field name="name">mrp.mat.detial.report.search</field>
            <field name="model">mrp.mat.detial.report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="warehouse_name"/>
                    <field name="plm_goods_name"/>
                    <field name="goods_name"/>
                    <field name="user_name"/>
                    <field name="type"/>
                    <field name="date"/>
                </search>
            </field>
        </record>
    </data>
</openerp>
