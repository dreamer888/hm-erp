<?xml version="1.0"?>
<openerp>
    <data>
    	<record id="mrp_in_detial_report_tree" model="ir.ui.view">
            <field name="name">mrp.in.detial.report.tree</field>
            <field name="model">mrp.in.detial.report</field>
            <field name="arch" type="xml">
                <tree string="生产入库明细" create="false">
                	<field name="id" invisible="1"/>
                	<field name="date" optional="show"/>
                	<field name="name" optional="show"/>
                	<button name="view_bil_from" type="object" string="查看单据明细" icon="fa-search" optional="show"/>
                	<field name="user_id" optional="show"/>
                	<field name="order_id" optional="show"/>
                	<field name="plm_id" optional="show"/>
                    <field name="goods_id" optional="show"/>
                    <field name="warehouse_dest_id" optional="show"/>
                    <field name="uom" optional="show"/>
                    <field name="plm_qty" sum="数量合计" optional="show"/>
                    <field name="goods_qty" sum="数量合计" optional="show"/>
                    <field name="state" optional="show"/>
                </tree>
            </field>
        </record>
        <record id="mrp_in_detail_report_tree_search" model="ir.ui.view">
            <field name="name">mrp.in.detial.report.search</field>
            <field name="model">mrp.in.detial.report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="warehouse_dest_id"/>
                    <field name="goods_id"/>
                    <field name="user_id"/>
                    <field name="date"/>
                </search>
            </field>
        </record>
    </data>
</openerp>
