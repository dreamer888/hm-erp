<?xml version="1.0"?>
<openerp>
    <data>
        <record id="mrp_bom_copy_dialog_wizard_form" model="ir.ui.view">
            <field name="name">mrp.bom.copy.dialog.wizard.form</field>
            <field name="model">mrp.bom.copy.dialog.wizard</field>
            <field name="arch" type="xml">
                <form string="BOM复制">
                    <group>
                        <field name='bom_id_from' />
                        <field name='goods_id_from'/>
                        <field name='goods_id'/>
                        <field name='bom_ver'/>
                    </group>
                    <footer>
                        <button name="do_confirm" type="object" string="确认" class="oe_highlight"
                                context="{'goods_id': goods_id}"/>
                        或者
                        <button string='取消' class='oe_link' special='cancel'/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>
