<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <!--发票FORM-->
        <record id="in_tax_invoice_form" model="ir.ui.view">
            <field name="name">in.tax.invoice.form</field>
            <field name="model">tax.invoice</field>
            <field name="arch" type="xml">
                <form string="采购发票"  create="false" delete="false">   
            		<header>
						<button name='tax_invoice_submit' type='object' states="draft" string='通知开票' class="oe_highlight"/>
            			<button name='tax_invoice_done' states='submit' type='object' string='抵扣记账' class='oe_highlight' groups='money.reconcile_groups'/>
                        <button name='tax_invoice_done_to_submit' states='done' type='object' string='撤销入账'/>
                        <field name='state' widget='statusbar' statusbar_visible="draft,submit,done"/>
            		</header>                
                    <sheet>
                        <div class="oe_button_box">
                            <button name="action_get_attachment_view"
                                class="oe_stat_button"
                                icon="fa-book"
                                type="object"
                                groups='money.reconcile_groups'>
                                <field name="attachment_number" widget="statinfo" string="附件"/>
                            </button>
                        </div>

                        <group>
                            <group>
                                <field name="order_id"/>
                                <field name="partner_order"/>                           
                            </group>
                            <group>
                                <field name="catagory"/>   
                            </group>                         
                        </group>
                        <group>
                            <group>                           
                                <field name="my_company_name" string = "本公司名称"/>
                                <field name="my_company_code" string = "纳税人税号"/>
                                <field name="my_company_address" string = "地址、电话"/>
                                <field name="my_company_bank_number" string ="开户行及帐号"/>
                            </group>                     
                            <group>
                                <field name="invoice_code"/>
                                <field name="invoice_number"/>
                                <field name="invoice_date"/>
                                <field name="voucher_id"/>
                            </group>   
                        </group>                        
                        <group>
                            <group>                           
                                <field name="partner_id" string = "供应商名称"/>
                                <field name="partner_code" string = "纳税人税号"/>
                                <field name="partner_address" string = "地址、电话"/>
                                <field name="partner_bank_number" string ="开户行及帐号"/>
                            </group>    
                            <group>
                                <field name="invoice_amount"/>
                                <field name="invoice_amount_add"/>
                                <field name="invoice_tax"/>
                                <field name="invoice_tax_add"/>
                                <field name="invoice_subtotal"/> 
                            </group>                                                 
                        </group>
                        <group>
                            <field name="note"/>
                        </group>   
                        <notebook>
                            <page string="发票明细">
                                <field name="line_ids" >
                                    <tree string="发票明细行" editable="bottom">
                                        <field name="note" optional="show"/>
                                        <field name="goods_id" optional="show"/>                                    
                                        <field name="goods_name" optional="show"/>
                                        <field name="partnumber" optional="show"/>
                                        <field name="uom" optional="show"/>
                                        <field name="quantity" optional="show"/>
                                        <field name="price" optional="show"/>
                                        <field name="amount" optional="show"/>
                                        <field name="tax_rate" optional="show"/>
                                        <field name="tax" optional="show"/>
                                        <field name="tax_catagory" optional="show"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!--发票tree-->
        <record id="in_tax_invoice_tree" model="ir.ui.view">
            <field name="name">in.tax.invoice.tree</field>
            <field name="model">tax.invoice</field>
            <field name="arch" type="xml">
                <tree string="采购发票" create="false" delete="false" decoration-info='state == "draft"'>   
                    <field name="create_date" string = "单据日期" optional='show'/>   
                    <field name="name" optional='show'/>  
                    <field name="partner_id" string = "供应商名称" optional='show'/>  
                    <field name="order_id" optional='show'/>
                    <field name="partner_order" optional='hide'/>   
                    <field name="invoice_number" optional='show'/>     
                    <field name="state" optional='show'/>
                    <field name="invoice_code" optional='hide'/>
                    <field name="invoice_amount" sum="合计" optional='show'/>
                    <field name="invoice_tax" sum="合计" optional='show'/>
                    <field name="invoice_subtotal" sum="合计" optional='show'/>                    
                    <field name="catagory" optional='hide'/>
                    <field name="invoice_date" optional='show'/>               
                </tree>
            </field>
        </record>

        <record id="in_tax_invoice_search" model="ir.ui.view">
            <field name="name">in.tax.invoice.search</field>
            <field name="model">tax.invoice</field>
            <field name="arch" type="xml">
                <search string="采购发票">
                    <field name='partner_id'/>
                    <field name='name'/>
                    <field name='order_id'/>
                    <field name='invoice_number'/>
                    <field name='order_id'/>
                    <field name='partner_order'/>
                    <separator/>
                    <filter string="未开具" name="draft"
                            domain="[('state','=', 'draft')]"/>
                    <filter string="已通知开票" name="submit"
                            domain="[('state','=', 'submit')]"/>  
                    <filter string="记账抵扣完成" name="done"
                            domain="[('state','=', 'done')]"/>                          
                    <separator/>                    
                    <group expand="1" string="分组">
                        <separator orientation="vertical" />
                        <filter string="供应商" name='partner_id' context="{'group_by':'partner_id'}"/>
                        <separator orientation="vertical" />
                        <filter string="发票类型" name="catagory" context="{'group_by':'catagory'}"/>
                        <separator orientation="vertical" />
                        <filter string="发票状态" name="state" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!--发票FORM-->
        <record id="out_tax_invoice_form" model="ir.ui.view">
            <field name="name">out.tax.invoice.form</field>
            <field name="model">tax.invoice</field>
            <field name="arch" type="xml">
                <form string="销售发票" create="false" delete="false">   
            		<header>
						<button name='tax_invoice_submit' type='object' states="draft" string='申请开票' class="oe_highlight"/>
            			<button name='tax_invoice_done' states='submit' type='object' string='确认开票' class='oe_highlight' groups='money.reconcile_groups'/>
                        <button name='tax_invoice_done_to_submit' states='done' type='object' string='撤销入账'/>
                        <field name='state' widget='statusbar' statusbar_visible="draft,submit,done"/>
            		</header>                
                    <sheet>
                        <div class="oe_button_box">
                            <button name="action_get_attachment_view"
                                class="oe_stat_button"
                                icon="fa-book"
                                type="object"
                                groups='money.reconcile_groups'>
                                <field name="attachment_number" widget="statinfo" string="附件"/>
                            </button>
                        </div>

                        <group>
                                <field name="money_invoice_id"/>
                                <field name="invoice_type"/>

                        </group>
                        <group>
                            <group>
                                <field name="order_id"/>
                                <field name="partner_order"/>                           
                            </group>
                            <group>
                                <field name="catagory"/>   
                            </group>                         
                        </group>
                        <group>
                            <group>                       
                                <field name="partner_id" string = "客户名称"/>
                                <field name="partner_code" string = "纳税人税号"/>
                                <field name="partner_address" string = "地址、电话"/>
                                <field name="partner_bank_number" string ="开户行及帐号"/>
                            </group>
                            <group>
                                <field name="invoice_code"/>
                                <field name="invoice_number"/>
                                <field name="invoice_date"/>
                                <field name="voucher_id"/>
                                <field name="cogs_voucher_id"/>
                            </group>                            
                        </group>
                        <group>
                            <group>                           
                                <field name="my_company_name" string = "本公司名称"/>
                                <field name="my_company_code" string = "纳税人税号"/>
                                <field name="my_company_address" string = "地址、电话"/>
                                <field name="my_company_bank_number" string ="开户行及帐号"/>
                            </group>          
                            <group>
                                <field name="invoice_amount"/>
                                <field name="invoice_amount_add"/>
                                <field name="invoice_tax"/>
                                <field name="invoice_tax_add"/>
                                <field name="invoice_subtotal"/> 
                            </group>                                          
                        </group>                             
                        <group>
                            <field name="note"/>
                        </group>                           
                        <notebook>
                            <page string="发票明细">
                                <field name="line_ids" >
                                    <tree string="发票明细行" editable="bottom">
                                        <field name="note" optional="show"/>
                                        <field name="goods_id" optional="show"/>                                    
                                        <field name="goods_name" optional="show"/>
                                        <field name="partnumber" optional="show"/>
                                        <field name="uom" optional="show"/>
                                        <field name="quantity" optional="show"/>
                                        <field name="price" optional="show"/>
                                        <field name="amount" optional="show"/>
                                        <field name="tax_rate" optional="show"/>
                                        <field name="tax" optional="show"/>
                                        <field name="tax_catagory" optional="show"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!--发票tree-->
        <record id="out_tax_invoice_tree" model="ir.ui.view">
            <field name="name">out.tax.invoice.tree</field>
            <field name="model">tax.invoice</field>
            <field name="arch" type="xml">
                <tree string="销售发票" create="false" delete="false" colors='blue:state == "draft"'>    
                    <field name="create_date"  string = "单据日期" optional='show'/>        
                    <field name="name" optional='show'/>  
                    <field name="partner_id" string = "客户名称" optional='show'/>        
                    <field name="order_id" optional='show'/>
                    <field name="partner_order" optional='hide'/>    
                    <field name="invoice_number" optional='show'/>    
                    <field name="state" optional='show'/>
                    <field name="invoice_code" optional='hide'/>
                    <field name="invoice_amount" sum="合计" optional='show'/>
                    <field name="invoice_tax" sum="合计" optional='show'/>
                    <field name="invoice_subtotal" sum="合计" optional='show'/>                    
                    <field name="catagory" optional='hide'/>
                    <field name="invoice_date" optional='show'/>               
                </tree>
            </field>
        </record>

        <record id="out_tax_invoice_search" model="ir.ui.view">
            <field name="name">out.tax.invoice.search</field>
            <field name="model">tax.invoice</field>
            <field name="arch" type="xml">
                <search string="销售发票">
                    <field name='partner_id'/>
                    <field name='name'/>
                    <field name='order_id'/>
                    <field name='invoice_number'/>
                    <field name='order_id'/>
                    <field name='partner_order'/>
                    <separator/>
                    <filter string="未申请开票" name="draft"
                            domain="[('state','=', 'draft')]"/>
                    <filter string="已申请开票" name="submit"
                            domain="[('state','=', 'submit')]"/>  
                    <filter string="已完成" name="done"
                            domain="[('state','=', 'done')]"/>                          
                    <separator/>                    
                    <group expand="1" string="分组">
                        <separator orientation="vertical" />
                        <filter string="客户" name='partner_id' context="{'group_by':'partner_id'}"/>
                        <separator orientation="vertical" />
                        <filter string="发票类型" name="catagory" context="{'group_by':'catagory'}"/>
                        <separator orientation="vertical" />
                        <filter string="发票状态" name="state" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="in_tax_invoice_action" model="ir.actions.act_window">
            <field name="name">采购发票</field>
            <field name="res_model">tax.invoice</field>
			<field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="in_tax_invoice_search"/>
		    <field name="domain">[('invoice_type','=','in')]</field>
            <field name="context">{'search_default_submit':1}</field>
        </record>

		<record id="in_tax_invoice_action_tree" model="ir.actions.act_window.view">
			<field eval="1" name="sequence"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="in_tax_invoice_tree"/>
			<field name="act_window_id" ref="in_tax_invoice_action"/>
		</record>
		<record id="in_tax_invoice_action_form" model="ir.actions.act_window.view">
			<field eval="2" name="sequence"/>
			<field name="view_mode">form</field>
			<field name="view_id" ref="in_tax_invoice_form"/>
			<field name="act_window_id" ref="in_tax_invoice_action"/>
		</record>

        <record id="out_tax_invoice_action" model="ir.actions.act_window">
            <field name="name">销售发票</field>
            <field name="res_model">tax.invoice</field>
			<field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="out_tax_invoice_search"/>
			<field name="domain">[('invoice_type','=','out')]</field>
            <field name="context">{'search_default_submit':1}</field>
        </record>

		<record id="out_tax_invoice_action_tree" model="ir.actions.act_window.view">
			<field eval="1" name="sequence"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="out_tax_invoice_tree"/>
			<field name="act_window_id" ref="out_tax_invoice_action"/>
		</record>
		<record id="out_tax_invoice_action_form" model="ir.actions.act_window.view">
			<field eval="2" name="sequence"/>
			<field name="view_mode">form</field>
			<field name="view_id" ref="out_tax_invoice_form"/>
			<field name="act_window_id" ref="out_tax_invoice_action"/>
		</record>

        <!-- 菜单加入税务模块 -->        
        <menuitem id="in_tax_invoice_menu" name='采购发票' action="in_tax_invoice_action"
            parent="money.menu_money_manage" sequence="10"/>      
        <menuitem id="out_tax_invoice_menu" name='销售发票' action="out_tax_invoice_action"
            parent="money.menu_money_manage" sequence="20"/>

    </data>
</odoo>


