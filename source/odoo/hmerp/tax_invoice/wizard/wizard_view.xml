<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="batch_tax_invoice_view_form" model="ir.ui.view">
        <field name="name">batch.tax.invoice.view.form</field>
        <field name="model">batch.tax.invoice</field>
        <field name="arch" type="xml">
            <form string="合并开票">
                <sheet>
                    <group>
                        <group>
                            <field name="invoice_amount" />
                            <field name="invoice_tax" />
                        </group>
                        <group>
                            <field name="real_amount" />
                            <field name="real_tax" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="diff_amount" />
                            <field name="diff_tax" />
                            <field name="partner_id" />
                        </group>
                        <group>
                            <field name="invoice_code" />
                            <field name="invoice_number" />
                            <field name="invoice_date" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="button_ok" type="object" string="确定" class="oe_highlight"/>
                    或者
                    <button string="取消" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="batch_tax_invoice_action"
			name='合并开票录入'
			res_model="batch.tax.invoice"
			binding_model="tax.invoice"
			view_mode="form"
			target="new"
			/>

</odoo>
