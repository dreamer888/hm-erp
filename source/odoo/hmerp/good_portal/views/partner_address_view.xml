<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="customer_address_form_portal">
            <field name="name">partner.address.form.portal</field>
            <field name="model">partner</field>
            <field name="inherit_id" ref="partner_address.customer_address_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='tags']/field[@name='note']" position="after">
                    <button type="object"
                        class="btn btn-secondary"
                        name="create_portal_user">
                        创建门户用户
                    </button>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="supplier_address_form_portal">
            <field name="name">partner.address.form.portal</field>
            <field name="model">partner</field>
            <field name="inherit_id" ref="partner_address.supplier_address_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='tags']/field[@name='note']" position="after">
                    <button type="object"
                        class="btn btn-secondary"
                        name="create_portal_user">
                        创建门户用户
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>