<odoo>
	<data>
	    <record model="ir.ui.view" id="lead_tree">
		    <field name="name">线索</field>
			<field name="model">lead</field>
			<field name="arch" type="xml">
				<tree string="Caption" create="true" delete="0" editable="top">
					<field name="name" optional="show"/>
					<field name="note" optional="show"/>
					<field name="customer_name" optional="show"/>
					<field name="contact" optional="show"/>
					<field name="channel_id" optional="show"/>
					<field name="source" optional="show"/>
					<button name="new_opp" string="创建商机" icon="fa-check" type="object" states="todo" optional="show"/>
					<button name="set_cancel" string="线索无效" icon="fa-close" type="object" states="todo" optional="show"/>
					<field name="state" readonly="1" optional="show"/>
					<field name="create_date" string="创建时间" readonly="1" optional="show"/>
					<field name="track_date" optional="show"/>
					<field name="track_result" optional="show"/>
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="opportunity_form">
			<field name="name">商机</field>
			<field name="model">opportunity</field>
			<field name="arch" type="xml">
				<form string="商机">
					<header>
						<field name="status" widget="statusbar" clickable="true"/>
					</header>
					<sheet>
						<group>
							<group>
								<field name="name"/>
								<field name="partner_id"
									   domain="[('c_category_id', '!=', False)]"
									   context="{'form_view_ref': 'core.customer_address_form'}"
								/>
								<field name="user_id"
									   options="{'no_create': True,'no_open': True}"/>
								<field name="date"/>
								<field name="planned_revenue"/>
							</group>
							<group>
								<field name="next_action"/>
								<field name="next_datetime"/>
								<field name="ref"/>
								<field name="tag_ids" widget="many2many_tags"/>
								<field name="success_reason_id"/>
							</group>
						</group>
						<notebook>
                            <page name="log" string="商机跟进">
								<field name="timeline_ids">
									<tree string="进展" editable='bottom'>
									    <field name='start_time' optional="show"/>
										<field name='end_time' optional="show"/>
										<field name='just_done' string='跟进记录' optional="show"/>
										<field name='need_help' style="color:blue;" optional="show"/>
										<field name='create_date' readonly="1" optional="hide"/>
									</tree>
								</field>
								<group>
									<field name="lead_id" readonly='1'/>
									<field name="channel_id"/>
									<field name="source"/>
								</group>
								<field name="note" placeholder='描述......'/>
							</page>
							<page name="price" string="售前报价">
								<field name="line_ids">
									<tree string="商品报价" editable='bottom'>
										<field name='goods_id'/>
										<field name='quantity' sum="数量总计"/>
										<field name='price'/>
										<field name='note'/>
									</tree>
								</field>
								<group>
									<field name="total_amount"/>
								</group>
						    </page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>
		<record id="opportunity_kanban" model="ir.ui.view">
			<field name="name">opportunity kanban</field>
			<field name="model">opportunity</field>
			<field name="arch" type="xml">
				<kanban class="o_kanban_mobile">
					<field name="name"/>
					<field name="user_id"/>
					<field name="partner_id"/>
					<field name="planned_revenue"/>
					<field name="next_action"/>
					<field name="next_datetime"/>
					<field name="color"/>
					<field name="priority"/>
					<templates>
						<t t-name="kanban-box">
							<div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
								<div class="o_kanban_image">
                                    <t>
                                        <img t-att-src="kanban_image('res.users', 'image_1920', record.user_id.raw_value)" t-att-title="record.user_id.value" t-att-alt="record.user_id.value" class="oe_module_icon"/>
                                    </t>
                                    <p>
										<t t-esc="record.user_id.value"/>
									</p>
                                </div>
                                <div class="oe_kanban_details">
									<p>
										<t t-esc="record.name.value"/>
									</p>
									<p>
									    <t t-esc="record.partner_id.value"/>
									</p>
									<p>
										<t t-esc="record.planned_revenue.value"/>
									</p>
									<p>
										<t t-esc="record.next_datetime.value"/>
									</p>
									<p>
										<t t-esc="record.next_action.value"/>
									</p>
									<field name="priority" widget="priority"/>
								</div>
							</div>
						</t>
					</templates>
				</kanban>
			</field>
		</record>
		<record id="opportunity_search" model="ir.ui.view">
            <field name="name">opportunity.search</field>
            <field name="model">opportunity</field>
            <field name="arch" type="xml">
                <search string="Search Opportunities">
				    <field name="partner_id"/>
                    <field name="name" filter_domain="['|',('project_id','ilike',self),('name', 'ilike', self)]"/>
					<field name="user_id"/>
                    <field name="status"/>
                    <separator/>
                    <filter string="我的商机" name="assigned_to_me"
                            domain="[('user_id', '=', uid)]"
                            help="指派给我的商机"/>
                    <filter string="未指派的" name="unassigned"
                            domain="[('user_id','=', False)]" help="未指派的商机"/>
                    <separator/>
                    <group expand="0" string="分组" colspan="4">
                        <filter name="group_user_id" string="指派给" context="{'group_by':'user_id'}"/>
                        <filter name="group_status" string="阶段" context="{'group_by':'status'}"/>
                        <separator orientation="vertical" />
                        <filter string="创建月份" context="{'group_by':'create_date:month'}" name="month"/>
                    </group>
                </search>
            </field>
        </record>
		<record id="opportunity_tree" model="ir.ui.view">
			<field name="name">opportunity.tree</field>
			<field name="model">opportunity</field>
			<field name="arch" type="xml">
				<tree string="商机" edit='false'>
					<field name="name" optional="show"/>
					<field name="partner_id" optional="show"/>
					<field name="user_id" optional="show"/>
					<field name="date" optional="show"/>
					<field name="planned_revenue" optional="show"/>
					<field name="total_amount" optional="show"/>
					<button name="assign_to_me" type="object" string="指派给我" class="oe_highlight"
                        attrs="{'invisible': [('user_id', '!=', False)]}"/>
				</tree>
			</field>
		</record>
		<record id="opportunity_calendar" model="ir.ui.view">
            <field name="name">opportunity.calendar</field>
            <field name="model">opportunity</field>
            <field name="arch" type="xml">
                <calendar color="user_id" date_start="next_datetime" quick_add="False" string="商机">
                    <field name="name"/>
                    <field name="next_action"/>
                </calendar>
            </field>
        </record>

		<!--action-->
		<record model="ir.actions.act_window" id="action_opportunity">
			<field name="name">商机</field>
			<field name="res_model">opportunity</field>
			<field name="view_mode">kanban,list,calendar,form</field>
			<field name="context">{
                    'search_default_group_status': 1,
                }
            </field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">点击创建一个商机</p>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_opportunity_private">
			<field name="name">私海</field>
			<field name="res_model">opportunity</field>
			<field name="view_mode">kanban,list,calendar,form</field>
			<field name="domain">['|',('user_id', '=', uid),('message_is_follower','=',True)]</field>
			<field name="context">{
                    'search_default_group_status': 1,
                }
            </field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">点击创建一个商机</p>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_opportunity_public">
			<field name="name">公海</field>
			<field name="res_model">opportunity</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('user_id', '=', False)]</field>
			<field name="context">{}</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">点击创建一个商机</p>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_lead">
			<field name="name">线索</field>
			<field name="res_model">lead</field>
			<field name="view_mode">tree,pivot</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">点击创建一个线索</p>
			</field>
		</record>

		<menuitem name="商机" id="menu_crm" web_icon="good_crm,static/description/icon.png"
		groups='good_crm.group_crm'/>
		<menuitem name="商机" id="menu_opportunity" parent="menu_crm"
		action="action_opportunity" sequence='1' groups="good_crm.group_manager"/>
		<menuitem name="私海" id="menu_opportunity_private" parent="menu_crm"
		action="action_opportunity_private" sequence='5'/>
		<menuitem name="公海" id="menu_opportunity_public" parent="menu_crm"
		action="action_opportunity_public" sequence='10'/>
		<menuitem name="线索" id="menu_lead" parent="menu_crm"
		action="action_lead" sequence='20'/>
	</data>
</odoo>