<?xml version="1.0"?>
<openerp>
    <data>
    	<record id="sell_order_detail_tree" model="ir.ui.view">
            <field name="name">sell.order.detail.tree</field>
            <field name="model">sell.order.detail</field>
            <field name="arch" type="xml">
                <tree string="销售明细表" create="false">
                	<field name="date" optional="show"/>
                	<field name="order_name" optional="show"/>
                	<button name="view_detail" type="object" string="查看明细" icon="fa-search" optional="show"/>
                	<field name="type" optional="show"/>
                	<field name="user_id" optional="show"/>
                	<field name="partner_id" optional="show"/>
                	<field name="goods_code" optional="show"/>
                    <field name="goods_id" optional="show"/>
                    <field name="attribute" groups='goods.multi_attrs_groups' optional="show"/>
                    <field name="warehouse_id" groups='warehouse.multi_warehouse_groups' optional="show"/>
                    <field name="qty" sum="数量合计" optional="show"/>
                    <field name="uom" optional="show"/>
                    <field name="price" optional="show"/>
                    <field name="amount" sum="销售收入合计" optional="show"/>
                    <field name="tax_amount" sum="税额合计" groups='sell.out_tax_groups' optional="show"/>
                    <field name="subtotal" sum="价税合计的合计" groups='sell.out_tax_groups' optional="show"/>
                    <field name="margin" sum="毛利合计" optional="show"/>
                    <field name="money_state" optional="show"/>
                    <field name="last_receipt_date" optional="show"/>
                    <field name="note" optional="show"/>
                </tree>
            </field>
        </record>
        <record id="search_sell_order_detail_tree" model="ir.ui.view">
            <field name="name">sell.order.detail.search</field>
            <field name="model">sell.order.detail</field>
            <field name="arch" type="xml">
                <search>
                    <field name="goods_id"/>
                    <field name="user_id"/>
                    <field name="date"/>
                </search>
            </field>
        </record>
    	<record id="sell_order_detail_graph" model="ir.ui.view">
            <field name="name">sell.order.detail.graph</field>
            <field name="model">sell.order.detail</field>
            <field name="arch" type="xml">
                <pivot string="销售明细表">
                    <field name='goods_id' type='row'/>
                    <field name='warehouse_id' type='col'/>
                    <field name='qty' type='measure'/>
                    <field name="price" type="measure"/>
                    <field name="amount" type='measure'/>
                    <field name="margin" type="measure"/>
                </pivot>
            </field>
        </record>
    </data>
</openerp>
