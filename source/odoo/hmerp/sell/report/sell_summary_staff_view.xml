<?xml version="1.0"?>
<openerp>
    <data>
    	<record id="sell_summary_staff_tree" model="ir.ui.view">
            <field name="name">sell.summary.staff.tree</field>
            <field name="model">sell.summary.staff</field>
            <field name="arch" type="xml">
                <tree string="销售汇总表（按销售人员）" create="false">
                	<field name="salesman" optional="show"/>
                	<field name="goods_code" optional="show"/>
                    <field name="goods" optional="show"/>
                    <button name="view_detail" type="object" string="查看明细" icon="fa-search"/>
                    <field name="attribute" groups='goods.multi_attrs_groups' optional="show"/>
                    <field name="warehouse" groups='warehouse.multi_warehouse_groups' optional="show"/>
                    <field name="qty_uos" sum="辅助数量合计" groups='goods.auxiliary_unit_groups' optional="show"/>
                    <field name="uos" groups='goods.auxiliary_unit_groups' optional="show"/>
                    <field name="qty" sum="基本数量合计" optional="show"/>
                    <field name="uom" optional="show"/>
                    <field name="price" optional="show"/>
                    <field name="amount" sum="销售收入合计" optional="show"/>
                    <field name="tax_amount" sum="税额合计" groups='sell.out_tax_groups' optional="show"/>
                    <field name="subtotal" sum="价税合计的合计" groups='sell.out_tax_groups' optional="show"/>
                    <field name="margin" sum="毛利合计" optional="show"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>
