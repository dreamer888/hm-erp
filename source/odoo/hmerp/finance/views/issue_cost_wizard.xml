<?xml version="1.0"?>
<openerp>
    <data>
        <record id="month_product_cost_tree" model="ir.ui.view">
            <field name="name">month.product.cost.tree</field>
            <field name="model">month.product.cost</field>
            <field name="arch" type="xml">
                <tree string="成本账"   create="false" edit='false'>
                    <field name="goods_id" optional="show"/>
                    <field name="period_id" optional="show"/>
                    <field name="period_begin_qty" sum="1" base_string='期初余额' merge="False" child_name='数量' colspan='2'  optional="show"/>
                    <field name="period_begin_cost" sum="1" merge="True" child_name='成本' optional="show"/> 
                    <field name="current_period_in_qty" sum="1" base_string='本期入库' merge="False" child_name='数量' colspan='2'  optional="show"/>
                    <field name="current_period_in_cost" sum="1" merge="True" child_name='成本' optional="show"/>
                    <field name="current_period_out_qty" sum="1" base_string='本期出库' merge="False" child_name='数量' colspan='2'  optional="show"/>
                    <field name="current_period_out_cost" sum="1" merge="True" child_name='成本' optional="show"/>
                    <field name="current_period_remaining_qty" sum="1" base_string='期末余额' merge="False" child_name='数量' colspan='2'  optional="show"/>
                    <field name="current_period_remaining_cost" sum="1" merge="True" child_name='成本' optional="show"/>
                </tree>
            </field>
        </record>

        <record id="month_product_cost_search" model="ir.ui.view">
            <field name="name">发出成本</field>
            <field name="model">month.product.cost</field>
            <field name="arch" type="xml">
                <search string="Search Voucher">
                    <field name='goods_id'/>
                    <field name='period_id'/>
                    <separator/>
                    <group expand="0" string="分组">
                        <filter name="by_period" string="会计期间" domain="[]" context="{'group_by':'period_id'}"/>
                        <filter name="by_goods" string="商品" domain="[]" context="{'group_by':'goods_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="month_product_cost_action" model="ir.actions.act_window">
            <field name="name">发出成本</field>
            <field name="res_model">month.product.cost</field>
            
            <field name="view_mode">tree</field>
            <field name="target"></field>
        </record>
        <menuitem id='month_product_cost_menu' action='month_product_cost_action' parent='voucher_books_menu' sequence='80'/>
    </data>
</openerp>
