<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="buy_order_split_wizard_view_form" model="ir.ui.view">
        <field name="name">buy_order_split_wizard.view.form</field>
        <field name="model">buy.order.split.wizard</field>
        <field name="arch" type="xml">
            <form string="采购订单拆分向导">
                <sheet>
                    <group>
                        <field name="order_line_id" invisible="1"/>
                        <div>将此采购订单行移入</div>
                        <field name="exist_order_id" options="{'no_create': True, 'no_open': True}"/>
                        <div>或</div>
                        <field name="new_order_vendor" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                </sheet>
                <footer>
                    <button string="确认" name="button_ok" type="object" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="buy_order_split_wizard_action" model="ir.actions.act_window">
        <field name="name">采购订单拆分向导</field>
        <field name="res_model">buy.order.split.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <record id="inherit_buy_order_form" model="ir.ui.view">
        <field name="name">buy.order.form.inherit</field>
        <field name="model">buy.order</field>
        <field name="inherit_id" ref="buy.buy_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree/field[@name='goods_id']" position='before'>
                <button string="移出" name="%(buy_order_split_wizard_action)d" type="action" attrs="{'invisible':[('parent.state','=','done')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
