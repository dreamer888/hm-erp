<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="change_responsible_wizard_view_form" model="ir.ui.view">
        <field name="name">change.responsible.wizard.view.form</field>
        <field name="model">change.responsible.wizard</field>
        <field name="arch" type="xml">
            <form string="批量修改客户负责人">
                <group>
                    <field name="new_user_id"/>
                    <field name="partners"/>
                </group>
                <footer>
                    <button string="确认" name="button_ok" type="object" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="change_responsible_wizard_action" model="ir.actions.act_window">
        <field name="name">批量修改客户负责人</field>
        <field name="res_model">change.responsible.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="change_responsible_wizard_menu"
        name="批量更新客户负责人员"
        action="change_responsible_wizard_action"
        groups="good_crm.group_manager"
        parent="good_crm.menu_crm"
        sequence="30"/>

</odoo>
