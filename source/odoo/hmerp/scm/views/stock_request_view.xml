<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id='stock_request_tree' model='ir.ui.view'>
            <field name='name'>stock.request.tree</field>
            <field name='model'>stock.request</field>
            <field name='arch' type='xml'>
                <tree string='补货申请' decoration-info='state == "draft"' decoration-muted= 'state == "cancel"' >
                    <field name="name" optional="show"/>
                    <field name="user_id" optional="show"/>
                    <field name="date" optional="show"/>
                    <field name="state" optional="show"/>
                </tree>
            </field>
        </record>
        <record id='stock_request_form' model='ir.ui.view'>
            <field name='name'>stock.request.form</field>
            <field name='model'>stock.request</field>
            <field name='arch' type='xml'>
                <form string='补货申请'>
                    <header>
                        <button name="stock_query" states="unsubmit" string="查询库存" type="object" class="oe_highlight"/>
                        <button name="stock_request_done" states="draft" string="确认" type="object" class="oe_highlight"/>
                        <button name="action_cancel" states="draft" string="作废" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="user_id"/>
                            </group>
                            <group>
                                <field name="date"/>
                            </group>
                        </group>
                        <field name="line_ids">
                            <tree string='补货申请明细行' editable='bottom' create='false'>
                                <field name='goods_id' readonly='1' optional="show"/>
                                <field name='attribute_id' readonly='1' groups='goods.multi_attrs_groups'  optional="show"/>
                                <field name='qty' readonly='1' optional="show"/>
                                <field name='to_sell_qty' readonly='1' optional="show"/>
                                <field name='to_delivery_qty' readonly='1' optional="show"/>
                                <field name='rel_req_qty'  optional="hide"/>
                                <field name='to_buy_qty' readonly='1' optional="show"/>
                                <field name='to_receipt_qty' readonly='1' optional="show"/>
                                <field name='min_stock_qty' readonly='1' optional="show"/>
                                <field name='supplier_id'
                                    domain="[('s_category_id', '!=', False)]"
                                    context="{'form_view_ref': 'core.supplier_address_form'}" optional="show"/>
                                <field name='request_qty'  optional="show"/>
                                <field name='uom_id' readonly='1' optional="show"/>
                            </tree>
                        </field>
                    </sheet>
                    <div class="oe_chatter">
	                    <field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>
                </form>
            </field>
        </record>

        <!-- 按需补货-->
        <record id='stock_request_action' model='ir.actions.act_window'>
            <field name='name'>补货申请</field>
            <field name='res_model'>stock.request</field>
            <field name='view_mode'>tree,form</field>
        </record>
        <menuitem id='stock_request_menu' action='stock_request_action' name='补货申请'
            parent='warehouse.warehouse_order' sequence='11'/>

        <record id="money_order_form" model="ir.ui.view">
            <field name="name">money.order.form.with_order</field>
            <field name="model">money.order</field>
            <field name="inherit_id" ref="money.money_order_form"/>
            <field name="arch" type="xml">
                <field name="category_id" position="after">
                    <field name="order_name" readonly="1" optional="show"/>
                    <field name="order_ref" readonly="1" optional="show"/>
                </field>
            </field>
        </record>
        <record id="reconcile_order_form" model="ir.ui.view">
            <field name="name">reconcile.order.form.with_order</field>
            <field name="model">reconcile.order</field>
            <field name="inherit_id" ref="money.reconcile_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='receivable_source_ids']/tree/field[@name='category_id']" position="after">
                    <field name="order_name" readonly="1" optional="show"/>
                    <field name="order_ref" readonly="1" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='payable_source_ids']/tree/field[@name='category_id']" position="after">
                    <field name="order_name" readonly="1" optional="show"/>
                    <field name="order_ref" readonly="1" optional="show"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
