<?xml version="1.0"?>
<openerp>
    <data>
    	<record id="buy_summary_goods_tree" model="ir.ui.view">
            <field name="name">buy.summary.goods.tree</field>
            <field name="model">buy.summary.goods</field>
            <field name="arch" type="xml">
                <tree string="采购汇总表（按商品）" create="false">
                	<field name="goods_categ" optional="show"/>
                	<field name="goods_code" optional="show"/>
                    <field name="goods" optional="show"/>
                    <button name="view_detail" type="object" string="查看明细" icon="fa-search" optional="show"/>
                    <field name="attribute" groups='goods.multi_attrs_groups' optional="show"/>
                    <field name="warehouse_dest" groups='warehouse.multi_warehouse_groups' optional="show"/>
                    <field name="qty" sum="基本数量合计" optional="show"/>
                    <field name="uom" optional="show"/>
                    <field name="qty_uos" sum="辅助数量合计" groups='goods.auxiliary_unit_groups' optional="show"/>
                    <field name="uos" groups='goods.auxiliary_unit_groups' optional="show"/>
                    <field name="price" optional="show"/>
                    <field name="amount" sum="采购金额合计" optional="show"/>
                    <field name="tax_amount" sum="税额合计" groups='buy.in_tax_groups' optional="show"/>
                    <field name="subtotal" sum="价税合计的合计" groups='buy.in_tax_groups' optional="show"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>
