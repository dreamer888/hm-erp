<?xml version="1.0"?>
<openerp>
    <data>
    	<record id="buy_order_track_tree" model="ir.ui.view">
            <field name="name">buy.order.track.tree</field>
            <field name="model">buy.order.track</field>
            <field name="arch" type="xml">
                <tree string="采购订单跟踪表" create="false">
                    <field name="date" optional="show"/>
                    <field name="type" optional="show"/>
                    <field name="order_name" optional="show"/>
                    <field name="partner_id" optional="show"/>
                    <field name="warehouse_dest_id" optional="show"/>
                	<field name="goods_code" optional="show"/>
                    <field name="goods_id" optional="show"/>
                    <field name="attribute" groups='goods.multi_attrs_groups' optional="show"/>
                    <button name="view_detail" type="object" string="查看明细" icon="fa-search"
                    	attrs="{'invisible': [('goods_id','=',False)]}" optional="show"/>
                    <field name="goods_state" optional="show"/>
                    <field name="qty" sum='1' optional="show"/>
                    <field name="uom" optional="show"/>
                    <field name="amount" sum='1' optional="show"/>
                    <field name="qty_not_in" sum='1' optional="show"/>
                    <field name="planned_date" optional="show"/>
                    <field name="wh_in_date" optional="show"/>
                    <field name="note" optional="show"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>
